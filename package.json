{
  "name": "videojs-shaka-player",
  "version": "0.2.0",
  "description": "Shaka Player playback technology for Video.js",
  "main": "dist/player.full.js",
  "scripts": {
    "build": "mkdir -p dist & npm run build-compile & npm run build-js & npm run build-css",
    "prepublish": "mkdir -p dist & npm run build-compile & npm run build-js & npm run build-css",
    "build-compile": "babel ./src/js/videojs.shaka.dev.js --out-file ./src/js/videojs.shaka.js --presets=es2015 ",
    "build-js": "browserify ./src/js/player.js > ./dist/player.full.js",
    "build-css": "browserify -g browserify-css ./src/js/player-skin.js -o ./dist/player-skin.js",
    "serve": "npm run build & nodemon ./server.js",
    "clean": "rm -rf dist & rm -rf node_modules"
  },
  "author": "Yudong Li",
  "repository": {
    "type": "git",
    "url": "git://github.com/MetaCDN/videojs-shaka-player.git"
  },
  "contributors": [
    {
      "name": "James Broberg",
      "email": "james.broberg@metacdn.com"
    }
  ],
  "engines": {
    "node": ">= 5.0.0"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "browserify": "13.0.0",
    "browserify-css": "0.9.1",
    "cors": "2.7.1",
    "express": "4.13.4",
    "express-http-proxy": "0.6.0",
    "nodemon": "1.9.1",
    "shaka-player": "2.0.5",
    "video.js": "^5.11.9"
  }
}
